<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <label for="inputName" class="col-sm-2 col-form-label">Project Name</label>
    <div class="col-sm-10">
      <%= form.text_field :name, class:"form-control", id:"inputName" %>
    </div>
  </div>

  <div class="row mb-3">
    <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <%= form.text_area :description, class:"form-control", rows:3, placeholder: "Project Elevator Pitch", id: "inputDescription" %>
    </div>
  </div>

  <fieldset class="row mb-3">
    <legend class="col-form-label col-sm-2 pt-0">Innovation Skill</legend>
    <div class="col-sm-10">
      <div class="form-check">
        <%= form.radio_button :s_curve, "ikigai_connection", class:"form-check-input", checked: true  %>
        <%= form.label "Empathetic Perspective", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :s_curve, "skills", class:"form-check-input" %>
        <%= form.label "Uncovering Demand", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :s_curve, "s_curve", class:"form-check-input", disabled: true  %>
        <%= form.label "Causal Structures", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :s_curve, "s_curve", class:"form-check-input", disabled: true  %>
        <%= form.label "Prototyping to Learn", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.radio_button :s_curve, "next", class:"form-check-input", disabled:true  %>
        <%= form.label "Understanding Tradeoffs", class: "form-check-label" %>
      </div>
    </div>
  </fieldset>

  <div class="row mb-3">
    <%= form.label "Picture of sample deliverable", style: "display: block" %>
    <%= form.file_field :avatar, class: "form-control-file" %>
  </div>

  <div class="mb-3">
    <%= form.number_field :user_id, id: :project_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <br>
  <button type="submit" class="btn btn-primary">Launch Project</button>
  <br>

<% end %>
