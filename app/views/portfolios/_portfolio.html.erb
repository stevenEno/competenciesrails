<div id="<%= dom_id portfolio %>">
  <p>
    <strong>Ikigai:</strong>
    <%= portfolio.ikigai %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= portfolio.description %>
  </p>

  <p>
    <strong>post_type:</strong>
    <%= portfolio.post_type %>
  </p>

  <p>
    <%= image_tag portfolio.avatar.variant(resize_to_limit: [300, 400]) if portfolio.avatar.attached? %>
  </p>

</div>
